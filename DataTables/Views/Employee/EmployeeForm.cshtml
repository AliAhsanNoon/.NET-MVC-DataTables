@model DataTables.Models.Employee

@{ ViewBag.Title = "EmployeeForm"; Layout = null; }


@using (Html.BeginForm("EmployeeForm", "Employee", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.EmpID)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Position, new { @class = "control-label" })
        @Html.EditorFor(m => m.Position, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Office, new { @class = "control-label" })
        @Html.EditorFor(m => m.Office, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age, new { @class = "control-label" })
        @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Salary, new { @class = "control-label" })
        @Html.EditorFor(m => m.Salary, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}

